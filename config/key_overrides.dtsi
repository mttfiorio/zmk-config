/ {
    key-overrides {
        compatible = "zmk,key-overrides";

        no_auto_shift_letters {
            matches = <
                &kp A, &kp B, &kp C, &kp D, &kp E, &kp F, &kp G, &kp H, &kp I, &kp J, &kp K, &kp L,
                &kp M, &kp N, &kp O, &kp P, &kp Q, &kp R, &kp S, &kp T, &kp U, &kp V, &kp W, &kp X,
                &kp Y, &kp Z
            >;
            binding = <&none>;
            on-press = <&no_auto_shift>;
        };

        no_auto_shift_tab {
            matches = <&kp TAB>;
            binding = <&none>;
            on-press = <&no_auto_shift>;
        };
    };
};